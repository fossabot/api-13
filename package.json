{
  "author": {
    "name": "Nico Finkernagel",
    "email": "nico@gruselhaus.com",
    "url": "https://www.gruselhaus.com"
  },
  "name": "gruselhaus-api",
  "description": "Official Gruselhaus API",
  "main": "dist/server.js",
  "scripts": {
    "test": "yarn run build;jest",
    "dev": "nodemon",
    "build": "rm -rf .dist/;tsc;yarn run docs",
    "start": "node ./dist/server.js",
    "docs-build-start": "yarn run docs;rm -rf ./dist;tsc;node ./dist/server.js",
    "docs": "apidoc -i src/ -o public/documentation/"
  },
  "keywords": [
    "API",
    "TypeScript",
    "Node.js",
    "Monitoring",
    "Express",
    "Jest",
    "Textbelt",
    "Nodemailer"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GruselhausOrganization/api.git"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-ga-middleware": "^0.1.6",
    "express-rate-limit": "^5.0.0",
    "firebase": "^6.0.4",
    "is-reachable": "^3.1.0",
    "lodash": "^4.17.13",
    "nodemailer": "^6.2.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-rate-limit": "^3.3.0",
    "@types/jest": "^24.0.13",
    "@types/lodash": "^4.14.135",
    "@types/node": "^12.0.10",
    "@types/nodemailer": "^6.2.0",
    "@types/request": "^2.48.1",
    "@types/request-promise": "^4.1.44",
    "@types/supertest": "^2.0.7",
    "apidoc": "^0.17.7",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "yarn run docs-build-start"
  }
}
